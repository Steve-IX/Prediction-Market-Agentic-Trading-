# Environment
NODE_ENV=development

# Database (Cloud PostgreSQL - Neon, Supabase, etc.)
DATABASE_URL=postgresql://user:password@host:5432/prediction_trading

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Polymarket Configuration
POLYMARKET_PRIVATE_KEY=           # Your Ethereum private key (without 0x prefix)
POLYMARKET_CHAIN_ID=137           # Polygon mainnet
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_GAMMA_HOST=https://gamma-api.polymarket.com
POLYMARKET_WS_HOST=wss://ws-subscriptions-clob.polymarket.com

# Kalshi Configuration
KALSHI_API_KEY_ID=                # UUID format from Kalshi dashboard
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi-private.key
KALSHI_ENVIRONMENT=demo           # 'demo' or 'prod'

# Anthropic (for LLM-based market matching)
ANTHROPIC_API_KEY=                # Your Anthropic API key

# Risk Management
MAX_POSITION_SIZE_USD=10000       # Maximum position per market in USD
MAX_TOTAL_EXPOSURE_USD=50000      # Maximum total exposure across all positions
MAX_DAILY_LOSS_USD=1000           # Daily loss limit - triggers kill switch
MAX_DRAWDOWN_PERCENT=10           # Max drawdown from peak - triggers kill switch
MIN_ARBITRAGE_SPREAD_BPS=5        # Minimum spread to execute arbitrage (basis points)
CROSS_PLATFORM_SPREAD_BUFFER=0.15 # Minimum dollar spread for cross-platform arb

# Trading Mode
PAPER_TRADING=true                # Set to false for live trading (DANGEROUS!)
PAPER_TRADING_BALANCE=10000       # Starting paper trading balance

# Monitoring & API
LOG_LEVEL=info                    # debug, info, warn, error
METRICS_PORT=9090                 # Prometheus metrics port
API_PORT=3000                     # REST API port
API_SECRET=                       # Secret for API authentication (optional)

# Feature Flags
ENABLE_CROSS_PLATFORM_ARB=true    # Enable cross-platform arbitrage
ENABLE_SINGLE_PLATFORM_ARB=true   # Enable single-platform arbitrage
ENABLE_MARKET_MAKING=false        # Enable market making strategy
ENABLE_WEBSOCKET=true             # Enable real-time WebSocket feeds
