{
  "name": "prediction-trading",
  "version": "0.1.0",
  "description": "Cross-platform prediction market arbitrage trading bot for Polymarket and Kalshi",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:setup-timescale": "tsx scripts/setup-timescaledb.ts",
    "backtest": "tsx scripts/backtest.ts",
    "simulate": "tsx scripts/simulate.ts",
    "deploy:check": "tsx scripts/deploy-check.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "prediction-markets",
    "arbitrage",
    "trading-bot",
    "polymarket",
    "kalshi",
    "cryptocurrency"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@polymarket/clob-client": "^5.2.1",
    "axios": "^1.13.2",
    "chromadb": "^1.8.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.0",
    "ethers": "^5.8.0",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.3",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "drizzle-kit": "^0.26.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
